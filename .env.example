# Echoelmusic Environment Configuration
# ======================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# Core Settings
# =============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://echo:your_password@localhost:5432/echoelmusic
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# Authentication
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_key_here_at_least_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# API Settings
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=50

# =============================================================================
# Video Generation
# =============================================================================
VIDEO_OUTPUT_DIR=/app/data/videos
THUMBNAIL_OUTPUT_DIR=/app/data/thumbnails
MODEL_CACHE_DIR=/models
MAX_VIDEO_DURATION=60
DEFAULT_RESOLUTION=1080p
DEFAULT_FPS=24

# =============================================================================
# GPU / CUDA
# =============================================================================
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST=8.0;8.6;8.9;9.0

# =============================================================================
# Model Settings
# =============================================================================
MODEL_NAME=wan2.2-t2v-14b
MODEL_PRECISION=fp16
ENABLE_FLASH_ATTENTION=true
ENABLE_XFORMERS=true

# =============================================================================
# Monitoring
# =============================================================================
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=admin

# =============================================================================
# External Services
# =============================================================================
# Stripe (for billing)
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# S3 (for video storage)
S3_BUCKET=echoelmusic-videos
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Sentry (for error tracking)
SENTRY_DSN=

# =============================================================================
# Email (for notifications)
# =============================================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=
FROM_EMAIL=noreply@echoelmusic.com
