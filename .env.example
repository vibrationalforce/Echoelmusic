# Echoelmusic Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# STREAMING CONFIGURATION
# ============================================

# YouTube Live
YOUTUBE_STREAM_KEY=your_youtube_stream_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Twitch
TWITCH_STREAM_KEY=your_twitch_stream_key_here
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# Facebook Live
FACEBOOK_STREAM_KEY=your_facebook_stream_key_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# Instagram Live
INSTAGRAM_STREAM_KEY=your_instagram_stream_key_here

# TikTok Live
TIKTOK_STREAM_KEY=your_tiktok_stream_key_here

# Custom RTMP Server
CUSTOM_RTMP_URL=rtmp://your-server.com/live
CUSTOM_RTMP_KEY=your_custom_stream_key_here

# ============================================
# CLOUD SERVICES
# ============================================

# Firebase (Optional - for analytics/crash reporting)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_APP_ID=your_firebase_app_id_here

# CloudKit (Apple ID required)
CLOUDKIT_CONTAINER_ID=iCloud.com.echoelmusic

# ============================================
# API KEYS
# ============================================

# OpenAI (for AI composition features)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic (Claude integration)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# HARDWARE CONFIGURATION
# ============================================

# DMX/Art-Net
ARTNET_HOST=192.168.1.100
ARTNET_PORT=6454
ARTNET_UNIVERSE=0

# Ableton Push 3 (auto-detected via CoreMIDI)
# PUSH3_MIDI_NAME=Ableton Push 3

# ============================================
# SERVER INFRASTRUCTURE
# ============================================

# Collaboration Server
COLLABORATION_SERVER_URL=wss://api.echoelmusic.com/ws
COLLABORATION_API_KEY=your_collaboration_api_key_here

# WebRTC Signaling
WEBRTC_SIGNALING_URL=wss://signaling.echoelmusic.com

# STUN/TURN Servers
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=turn:turn.echoelmusic.com:3478
TURN_USERNAME=your_turn_username_here
TURN_PASSWORD=your_turn_password_here

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode (true/false)
DEBUG_MODE=true

# Log Level (trace, debug, info, notice, warning, error, critical)
LOG_LEVEL=debug

# Enable Mock Data (for simulator testing)
ENABLE_MOCK_DATA=true

# ============================================
# APP STORE CONNECT (CI/CD Only)
# ============================================

# App Store Connect API
# ASC_API_KEY_ID=your_key_id_here
# ASC_ISSUER_ID=your_issuer_id_here
# ASC_API_KEY_PATH=./AuthKey_XXXXX.p8

# ============================================
# ANALYTICS & MONITORING
# ============================================

# Sentry (error tracking)
SENTRY_DSN=https://your_sentry_dsn_here

# Mixpanel (analytics)
MIXPANEL_TOKEN=your_mixpanel_token_here

# ============================================
# ENTERPRISE FEATURES (Optional)
# ============================================

# Certificate Pinning
ENABLE_CERTIFICATE_PINNING=false
PINNED_CERTIFICATE_HASH=sha256/your_certificate_hash_here

# Biometric Auth
REQUIRE_BIOMETRIC_AUTH=false

# Audit Logging
ENABLE_AUDIT_LOGGING=false
