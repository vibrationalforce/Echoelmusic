default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Setup App Store Connect API Key
    app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: false,
      in_house: false
    )

    # Update code signing settings
    update_code_signing_settings(
      use_automatic_signing: true,
      team_id: ENV["APPLE_TEAM_ID"],
      path: "Echoelmusic.xcodeproj"
    )

    # Build the app
    build_app(
      project: "Echoelmusic.xcodeproj",
      scheme: "Echoelmusic",
      destination: "generic/platform=iOS",
      configuration: "Release",
      clean: true,
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.echoelmusic.app" => "match AppStore com.echoelmusic.app"
        }
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      apple_id: ENV["APPLE_APP_ID"]
    )
  end

  desc "Just build (no upload)"
  lane :build_only do
    # Build without signing for CI testing
    xcodebuild(
      project: "Echoelmusic.xcodeproj",
      scheme: "Echoelmusic",
      configuration: "Release",
      clean: true,
      build: true,
      destination: "generic/platform=iOS Simulator",
      xcargs: "CODE_SIGNING_ALLOWED=NO"
    )
  end
end
