<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- App Information -->
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>

	<!-- Privacy Permissions -->

	<!-- Microphone Permission (REQUIRED for audio capture) -->
	<key>NSMicrophoneUsageDescription</key>
	<string>Echoelmusic needs microphone access to capture your voice and breath for real-time audio visualization and biofeedback music creation.</string>

	<!-- HealthKit Permissions (for HRV biofeedback) -->
	<key>NSHealthShareUsageDescription</key>
	<string>Echoelmusic reads your heart rate variability (HRV) to create adaptive audio experiences that respond to your biometric state for creative expression.</string>
	<key>NSHealthUpdateUsageDescription</key>
	<string>Echoelmusic may log your meditation and breathing sessions to HealthKit for wellness tracking.</string>

	<!-- Motion Permission (for head tracking with spatial audio) -->
	<key>NSMotionUsageDescription</key>
	<string>Echoelmusic uses head tracking to create immersive 3D spatial audio experiences that move with your head movements.</string>

	<!-- Bluetooth Permission (for AirPods detection and ASAF) -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>Echoelmusic detects your AirPods to enable Apple Spatial Audio Features (ASAF) and high-quality Multidimensional Brainwave Entrainment.</string>

	<!-- HomeKit Permission (for smart home lighting sync) -->
	<key>NSHomeKitUsageDescription</key>
	<string>Echoelmusic connects to your smart home devices to synchronize lighting scenes and ambiance with your bio-reactive audio experience.</string>

	<!-- Location Permissions (for nearby events and users) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Echoelmusic uses your location to discover nearby events, connect with other users, and provide location-aware audio experiences.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Echoelmusic uses your location to discover nearby events, connect with other users, and provide location-aware audio experiences even in the background.</string>

	<!-- Background Modes (for continuous audio playback) -->
	<key>UIBackgroundModes</key>
	<array>
		<string>audio</string>
	</array>

	<!-- Required Device Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
		<string>microphone</string>
	</array>

	<!-- Supported Interface Orientations -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- iPad Support -->
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- App Appearance -->
	<key>UILaunchScreen</key>
	<dict>
		<key>UIColorName</key>
		<string>LaunchScreenBackground</string>
		<key>UIImageName</key>
		<string></string>
	</dict>

	<!-- Scene Configuration -->
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
	</dict>

	<!-- Minimum iOS Version -->
	<key>MinimumOSVersion</key>
	<string>16.0</string>

	<!-- iTunes File Sharing (disabled for security) -->
	<key>UIFileSharingEnabled</key>
	<false/>
	<key>LSSupportsOpeningDocumentsInPlace</key>
	<false/>
</dict>
</plist>
