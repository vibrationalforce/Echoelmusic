{
  "name": "Echoel",
  "short_name": "Echoel",
  "description": "Your body is the instrument. Heartbeat, breath, and movement become spatial sound, light, and vision. Bio-reactive creative platform.",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#030712",
  "theme_color": "#22C55E",
  "orientation": "any",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["music", "health", "productivity", "entertainment"],
  "icons": [
    {
      "src": "favicon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "favicon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "favicon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "app-icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "app-icon.svg",
      "sizes": "1024x1024",
      "type": "image/svg+xml",
      "form_factor": "wide",
      "label": "Echoel Bio-Reactive Interface"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Session",
      "short_name": "Session",
      "description": "Start a bio-reactive session",
      "url": "/?action=session",
      "icons": [{"src": "favicon.svg", "sizes": "any"}]
    }
  ],
  "related_applications": [
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/echoelmusic/id6757957358"
    }
  ],
  "prefer_related_applications": true,
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+echoelmusic",
      "url": "/?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "audio/wav": [".wav"],
        "audio/mpeg": [".mp3"],
        "audio/flac": [".flac"],
        "audio/aac": [".aac", ".m4a"]
      }
    }
  ]
}
