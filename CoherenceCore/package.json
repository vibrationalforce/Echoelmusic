{
  "name": "coherence-core",
  "version": "0.1.0",
  "private": true,
  "description": "Quad-platform biophysical resonance framework",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "mobile:ios": "cd apps/mobile && npx expo run:ios",
    "mobile:android": "cd apps/mobile && npx expo run:android",
    "desktop:dev": "cd apps/desktop && npm run tauri dev",
    "desktop:build": "cd apps/desktop && npm run tauri build"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0"
}
