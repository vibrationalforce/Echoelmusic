{
  "expo": {
    "name": "CoherenceCore",
    "slug": "coherence-core",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "coherencecore",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.coherencecore.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera access is needed for micro-vibration detection (EVM analysis)",
        "NSMicrophoneUsageDescription": "Microphone access is needed for audio analysis",
        "NSMotionUsageDescription": "Motion sensors are used for vibration detection"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.coherencecore.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-camera",
      "expo-av",
      "expo-sensors",
      "expo-haptics"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
