# Echoelmusic Backend Environment Variables
# Copy this to .env and fill in your values

# Application
APP_NAME=Echoelmusic API
APP_VERSION=3.0.0
DEBUG=false

# Database
DATABASE_URL=postgresql+asyncpg://echoelmusic:password@localhost:5432/echoelmusic

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_BASIC=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_STUDIO=price_...

# Web3 / Blockchain
WEB3_PROVIDER_URL=https://polygon-mainnet.infura.io/v3/YOUR_KEY
NFT_CONTRACT_ADDRESS=0x...
WALLET_PRIVATE_KEY=0x...

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=echoelmusic-media
AWS_REGION=us-east-1

# IPFS
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Platform API Keys
YOUTUBE_API_KEY=
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TIKTOK_API_KEY=
DISTROKID_API_KEY=

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@echoelmusic.com

# Monitoring
SENTRY_DSN=

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://echoelmusic.com
